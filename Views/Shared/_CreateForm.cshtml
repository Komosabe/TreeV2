@model TreeV2.NodeDto.CreateNodeDto

@{
    Layout = null;
}

@using (Html.BeginForm("Create", "Tree", FormMethod.Post, new { @class = "d-flex flex-column" }))
{
    <div class="d-flex flex-column mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="d-flex flex-column mb-3">
        @Html.LabelFor(m => m.Parent, new { @class = "form-label" })
        @if (Model.Parent != null)
        {
            @Html.DropDownListFor(m => m.ParentNode, Model.Parent, "Select parent", new { @class = "form-control" })
        }
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Create" />
}