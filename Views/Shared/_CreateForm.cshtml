@model TreeV2.NodeDto.CreateNodeDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@using (Html.BeginForm("Create", "Tree", FormMethod.Post, new { @class = "d-flex flex-column" }))
{
    <h3>Create</h3>
    <div class="d-flex flex-column">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class="w-75"})
    </div>
    <div class="d-flex flex-column">
        @Html.LabelFor(m => m.Parent)
        @if (Model is not null)
        {
            @Html.DropDownListFor(m => m.ParentNode, Model.Parent, "Choose Parent", new { @class="w-75"})
        }
    </div>
    <input type="submit" class="w-75 mt-3" />
}